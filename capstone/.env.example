# --- LLM Provider ---
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# --- Embeddings ---
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# --- Retrieval ---
TOP_K=5
CANDIDATE_K_VEC=50
CANDIDATE_K_LEX=30
MAX_CTX_CHARS=1800
RERANK_VEC_WEIGHT=0.30
RERANK_BM25_WEIGHT=1.20
RERANK_PDF_BIAS=0.80
RERANK_TRANSCRIPT_PENALTY=0.40
BM25_K1=1.5
BM25_B=0.75
NEIGHBOR_PAGES=1

# --- Ollama Generation ---
OLLAMA_NUM_PREDICT=512
OLLAMA_NUM_CTX=4096
OLLAMA_TEMPERATURE=0.1
OLLAMA_KEEP_ALIVE=30m

# --- Agent ---
MAX_AGENT_ITERATIONS=5
REFLECTION_THRESHOLD=3.0
MAX_RETRIES=1

# --- ChromaDB ---
CHROMA_DIR=data/processed/chroma

# --- Debug ---
DEBUG_RETRIEVAL=0
